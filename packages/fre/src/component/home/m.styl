@media screen and (max-width: 480px)
    h1
        padding 20px 10px
        font-size 24px
    .rank, .footer, .biu, .logo, .tab-right
        display none
    body
        min-width 100%
    .wrap
        width 100%
    nav
        a
            margin 0 !important
        .active
            margin-left 10px
    header
        height 120px
    .search
        transform translate(-50%, 0)
    .cover, .cover img
        width 100% !important
        height 180px !important
        box-shadow none !important
    .recommend
        box-sizing border-box
        padding 1px
        height 800px
        overflow hidden
        li
            width 33.3%
            padding 1px
            box-sizing border-box
        .title
            width 100%
    .week-list
        padding-bottom 20px
        .posts
            height auto
            padding 0 10px
            box-sizing border-box
            li
                width 25%
        h1
            display none
        .headline
            ul
                display flex
            button
                margin 3px !important
        .cover, img
            height 80px !important
            width 80px !important
            border-radius 40px !important
        .title
            height 30px !important
    .post-list
        box-sizing border-box
        padding 1px
        li
            width 33.3%
            margin 0
            box-sizing border-box
            padding 1px
            .title
                width 100%
    .right
        box-sizing border-box
        width 100%
        .info
            width 100%
    .video-list
        width 100%
        box-sizing border-box
    .ep
        width 100%
        height auto
    .close
        right 50%
        transform translate(50%, 0)
        top -50px
    .ugc-list
        padding 5px 5px 20px 5px
        li
            width 50% !important
            margin 0 !important
            padding 5px !important
            box-sizing border-box
            .post
                box-shadow none !important
                .cover
                    height 120px !important
                    img
                        height 120px !important