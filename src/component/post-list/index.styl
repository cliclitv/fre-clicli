@import "../../public/css/var.styl"

.post-list
  margin-bottom 30px!important
  li
    width 176.6px
    display inline-block
    margin-right 20px
    box-sizing border-box
    cursor: pointer
  .title
    width 170px
    height 40px
    overflow hidden
    padding: 10px 0
  .cover,.cover img
    width 100%
    height 230px
    box-shadow $shadow
    border-radius 2px
    object-fit cover

  li:nth-child(6n)
    margin-right 0